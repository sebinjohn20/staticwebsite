<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <web>
            <default>
                <cms_home_page>shopkartlite_home</cms_home_page>
            </default>
        </web>
        <cms>
            <wysiwyg>
                <enabled>hidden</enabled>
            </wysiwyg>
        </cms>
        <shopkartlitesettings>
            <htinformation>
                <activationproductsku>M2HTSKL</activationproductsku>
            </htinformation>
            <navigation_settings>
                <enable>1</enable>
            </navigation_settings>
            <promotion_settings>
                <enable_promotion>0</enable_promotion>
                <promotion_text></promotion_text>
            </promotion_settings>
            <category_settings>
                <show_border>0</show_border>
                <show_new_label>0</show_new_label>
                <show_sale_label>0</show_sale_label>
            </category_settings>
            <product_settings>
                <show_new_label>0</show_new_label>
                <show_sale_label>0</show_sale_label>
            </product_settings>            
            <footer_columns>
                <enable_footer_columns>1</enable_footer_columns>
                <footer_st_column>footer_shop_info</footer_st_column>
                <footer_nd_column>footer_quicklinks</footer_nd_column>
                <footer_rd_column>footer_myaccount</footer_rd_column>
                <footer_th_column>footer_newsletter</footer_th_column>
            </footer_columns>            
            <footer_bottom>
                <enable_footer_bottom>1</enable_footer_bottom>
                <copyright_text>Copyright 2019 ShopkartLite. All rights reserved.</copyright_text>
                <copyright_right_block></copyright_right_block>
            </footer_bottom>
            <customcss>
                <custom_css></custom_css>
            </customcss>
        </shopkartlitesettings>
    </default>
</config>
